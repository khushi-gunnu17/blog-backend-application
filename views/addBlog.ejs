<!DOCTYPE html>

<html lang="en">

    <head>
        <%- include('./partials/head.ejs') %>
        <title>Add New Blog</title>
    </head>

    <body>
        <%- include('./partials/nav.ejs') %>

        <div class="container mt-4">

            <form action="/blog" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="coverImage">Cover Image</label>
                    <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" aria-describedby="title" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="body">Body</label>
                    <textarea class="form-control" placeholder="write a blog here" name="body" id="body" aria-label="With textarea"></textarea>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>

        <%- include('./partials/scripts.ejs') %>
    </body>

</html>